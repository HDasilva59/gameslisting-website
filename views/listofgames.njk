{% extends "layout.njk" %}

{% block css %}
  {% if isAtTheEnd %}
  <link rel="stylesheet" href="button.css">
  {% endif %}
{% endblock %}

{% block content %}
  <div class="row row-cols-2 row-cols-md-4 g-5">
  <h1>rendered?</h1>
  {% for i in games.games %}
  <div class="col">
    <div class="card h-100 shadow p-3 mb-5 bg-body rounded" >
      <a href="/games/{{result.games[loop.index0].id}}" class="link-dark">
        <img src="{{result.games[loop.index0].cover.url}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{result.games[loop.index0].name}}</h5>
          <p class="card-text">{{result.games[loop.index0].category}}</p>
        </div>
      </a>
    </div>
  </div>
  {% endfor %}
  </div>
   <div>
  <button type="button" class="btn btn-secondary float-start"><a href="/games?page={{ current - 1 }}" class="link-light" >previous</a></button>
  <button type="button" class="btn btn-secondary float-end" id="next-button"><a href="/games?page={{ current + 1 }}" class="link-light" >next</a></button>
</div>
{% endblock %}
